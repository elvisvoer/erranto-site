---
import { getCollection } from "astro:content";
import Layout from "../../layout/default.astro";

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const posts = (await getCollection("blog")).filter(
    (post) => !post.data.archived
  );
  return posts.map((entry: any) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
// 2. When it's time to render, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
const { created, tags, title } = entry.data;

const options: any = {
  weekday: "long",
  year: "numeric",
  month: "long",
  day: "numeric",
};
---

<Layout pageTitle={title} keywords={tags}>
  <article>
    <header class="mb-10">
      <h1 class="text-5xl font-extrabold dark:text-white text-center">
        {title}
      </h1>
      <time
        datetime={new Date(created).toISOString()}
        class="block my-2 text-lg font-light text-gray-500 text-center"
      >
        {new Date(created).toLocaleDateString(undefined, options)}
      </time>
      {
        tags && (
          <p class="mb-4 text-center font-normal text-gray-500 dark:text-gray-400">
            {tags.map((t: string) => (
              <a
                class="mr-4 inline-block mb-2 hover:underline"
                href={`/blog/tags/${t}`}
              >
                #{t}
              </a>
            ))}
          </p>
        )
      }
    </header>

    <div
      class="format dark:format-invert dark:format-code:bg-gray-700 lg:format-lg max-w-screen-lg"
    >
      <Content />
      <script
        src="https://utteranc.es/client.js"
        repo="elvisvoer/erranto-comments"
        issue-term="pathname"
        theme="dark-blue"
        crossorigin="anonymous"
        async></script>
    </div>
  </article>
</Layout>

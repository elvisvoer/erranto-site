<Layout pageTitle="DPK League">
  <h1 class="text-xl my-6 text-center font-light dark:text-gray-300">
    DPK League
  </h1>
  <SignedOut>
    <SignInButton
      class:list={"w-5/6 mx-auto text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"}
